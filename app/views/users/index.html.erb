<div class="container">
	<div class="page-header">
	  <h1>Ruby on Rails with Bootstrap      <%= link_to "Add new user", {:controller => "users", :action => "new" }, :class => "btn btn-sm btn-primary" %></h1>
	  
	</div>

	<% if flash[:notice] %>
	<div class="alert alert-success">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<strong>Success!</strong> <%= flash[:notice] %>
	</div>
	<% end %>

	<table class="table table-hover">
		<thead>
			<tr>
				<th>Id User</th>
				<th>Nama</th>
				<th>Jenis Kelamin</th>
				<th>Tempat, tanggal lahir</th>
				<th>email</th>
				<th>alamat</th>
				<th>action</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= user.name %></td>
				<td><%= user.sex %></td>
				<td><%= user.dob %></td>
				<td><%= user.email %></td>
				<td><%= user.address %></td>
				<td>
					<%= link_to 'Edit', edit_user_path(user.id), :class => "btn btn-xs btn-success" %>
					<%= link_to 'Delete', user_path(user.id), method: "DELETE", data: {confirm: 'Delete '+user.name+' ? '}, :class => "btn btn-xs btn-danger" %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	
</div>
